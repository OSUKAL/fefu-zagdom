{% import _self as macros %}

{% set scope = {
   items: items ?? [],
} %}

{% macro content(scope) %}

   <ul class="nav">
      {% for item in scope.items %}
         {% set item = {
            url: item.url ?? '',
            name: item.name ?? '',
         } %}

         <li class="nav__item">
            <a href="{{ item.url }}" class="nav__link">
               {{ item.name }}
            </a>
         </li>
      {% endfor %}
   </ul>

{% endmacro %}

{{ macros.content(scope) }}