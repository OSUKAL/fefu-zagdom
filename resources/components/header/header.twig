{% import _self as macros %}

{% set scope = {
   menu: [
      {
         url: '/',
         name: 'Реализованные проекты',
      },
      {
         url: '/',
         name: 'Новости',
      },
      {
         url: '/',
         name: 'Контакты',
      },
   ],
   phone: '+7 (900) 900-90-90',
} %}

{% macro logo() %}
   <a href="{{ route('home') }}">
      <img
         src="{{ 'img/logos/logo.png'|asset }}"
         alt="Zagdom"
      >
   </a>
{% endmacro %}

{% macro phone(value) %}
   <a href="tel:{{ value }}" class="phone">
      <img
         src="{{ 'icons/contacts/phone.svg'|asset }}"
         alt="Телефон"
         class="phone__icon"
         width="16"
         height="16"
      >
      {{ value }}
   </a>
{% endmacro %}

{% macro btn() %}
   <button class="btn btn--prm" type="button">
      Оставить заявку
   </button>
{% endmacro %}

{% macro content(scope) %}

<div class="container">
   <div class="header__inner">
      <div class="header__logo">
         {{ macros.logo }}
      </div>

      <div class="header__menu">
         {% include "@components/site-nav/nav.twig" with {
            items: scope.menu,
         } %}
      </div>

      <div class="header__phone">
         {{ macros.phone(scope.phone) }}
      </div>

      <div class="header__btn">
         {{ macros.btn }}
      </div>
   </div>
</div>

{% endmacro %}
{{ macros.content(scope) }}